<Window x:Class="AdCraftLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdCraft Launcher" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI, Tahoma, sans-serif"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Стиль для современного поля ввода (TextBox) -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для главной кнопки (Играть) -->
        <Style x:Key="PlayButton" TargetType="Button">
            <Setter Property="Background" Value="#E67E22"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D35400"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555555"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для тонкого прогресс-бара -->
        <Style x:Key="SlimProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="Foreground" Value="#E67E22"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <Grid>
                                <Border x:Name="PART_Track"/>
                                <Border x:Name="PART_Indicator" HorizontalAlignment="Left" Background="{TemplateBinding Foreground}" CornerRadius="3"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Главная обертка окна со скругленными углами -->
    <Border CornerRadius="15">
        <!-- Фон-картинка (обрезается по углам автоматически благодаря ImageBrush внутри Border) -->
        <Border.Background>
            <ImageBrush ImageSource="/Images/image.png" Stretch="UniformToFill"/>
        </Border.Background>

        <Grid>
            <!-- Легкое затемнение фона для читаемости -->
            <Border Background="#33000000" CornerRadius="15"/>

            <!-- Кнопка закрытия окна (справа сверху) -->
            <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Width="30" Height="30" Margin="15" Background="Transparent" Foreground="White" 
                    BorderThickness="0" FontSize="16" Cursor="Hand"
                    Click="CloseButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="Transparent" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Кнопка свернуть окно (рядом с закрытием) -->
            <Button Content="─" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Width="30" Height="30" Margin="0,15,50,0" Background="Transparent" Foreground="White" 
                    BorderThickness="0" FontSize="16" Cursor="Hand"
                    Click="MinimizeButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="Transparent" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,3"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Центральная стеклянная панель -->
            <Border Width="340" Height="420" Background="#CC121212" CornerRadius="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.6"/>
                </Border.Effect>

                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Логотип -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="ADCRAFT" Foreground="White" FontSize="32" FontWeight="Black" HorizontalAlignment="Center"/>
                        <TextBlock Text="LAUNCHER 1.20.1" Foreground="#E67E22" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,-2,0,0"/>
                    </StackPanel>

                    <!-- Поле Никнейм -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="НИКНЕЙМ" Foreground="#AAAAAA" FontSize="12" FontWeight="SemiBold" Margin="5,0,0,5"/>
                        <TextBox x:Name="UsernameBox" Style="{StaticResource ModernTextBox}" Height="45" Text="Player"/>
                    </StackPanel>

                    <!-- Кнопка и статус -->
                    <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                        <Button x:Name="LaunchButton" Content="ИГРАТЬ" Style="{StaticResource PlayButton}" Height="55" Margin="0,0,0,20" Click="LaunchButton_Click"/>

                        <TextBlock x:Name="StatusText" Text="Готов к запуску" Foreground="#AAAAAA" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <ProgressBar x:Name="DownloadProgress" Style="{StaticResource SlimProgressBar}" Height="6" Value="0" Maximum="100"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
